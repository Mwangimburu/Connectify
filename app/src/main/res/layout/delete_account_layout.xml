<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/delete_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Delete Account"
        android:textColor="@color/error_red"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/delete_text"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:text="You will not continue using Connectify" />
    <TextView
        android:id="@+id/warn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notice"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:text="You will loose all your data!" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/warn"
        android:layout_centerHorizontal="true"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancel_delete"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:text="Cancel"
            app:cornerRadius="50dp"
            app:strokeColor="@color/google_blue" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/delete"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/cancel_delete"
            android:text="Proceed"
            android:textColor="@color/error_red"
            app:cornerRadius="50dp"
            app:strokeColor="@color/error_red" />


    </RelativeLayout>




</RelativeLayout>