<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/team_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:src="@drawable/profile_holder"
        app:civ_border_color="@color/grey_dark"
        app:civ_border_width="1dp" />


    <TextView
        android:id="@+id/team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="13dp"
        android:layout_toRightOf="@id/team_profile"
        android:text="Team name" />

    <ImageView
        android:id="@+id/area"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_below="@id/team_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="13dp"
        android:layout_toRightOf="@id/team_profile"
        android:src="@drawable/location_icon" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/team_name"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/area"
        android:text="location" />


    <View
        android:id="@+id/top_line"
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:layout_below="@id/team_profile"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/team_profile"
        android:background="@color/grey_dark" />


</RelativeLayout>